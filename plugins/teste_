""" Para ter base """

import logging

logging.basicConfig(format='%(asctime)s - %(name)s - %(levelname)s - %(message)s', level=logging.INFO)
logger = logging.getLogger(__name__)

from telegram import InlineKeyboardButton, InlineKeyboardMarkup
from telegram.ext import (
    Updater,
    CommandHandler,
    CallbackQueryHandler,
)

updater = Updater(token=token, use_context=True)
dispatcher = updater.dispatcher


def escolha(update, context):
    status = [
        [
            InlineKeyboardButton("orange", callback_data='orange'),
            InlineKeyboardButton("apple", callback_data='apple'),
        ],
    ]

    reply_markup = InlineKeyboardMarkup(status)

    update.message.reply_text(f'E aí, {update.message.chat.first_name}! Seu desgraçado.', reply_markup=reply_markup)


def buttons(update, context):
    logger.info('Teste: "%s"\nTeste2: "%s"', update, context.error)

    query = update.callback_query


    if query.data == 'orange':
        query.answer(text='Ah, beleza! Orange.', show_alert=True)
    elif query.data == 'apple':
        query.answer(text='Ah, beleza! Apple.', show_alert=True)
    else:
        query.answer('nadinha')


start_handler = CommandHandler('start', start)
dispatcher.add_handler(start_handler)

buttons_handler = CallbackQueryHandler(buttons)
dispatcher.add_handler(buttons_handler)

updater.start_polling()
print('Viva ao @applled')
updater.idle() 
